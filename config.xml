<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.nova.annualtargets"
    version   = "1.0.0">

<name>App - Annual Targets</name>

<description>
Make progress to the targets.
</description>

<author href="http://novasoftware.com" email="cail@shinetechchina.com">
Gerrit lynx Nova Software
</author>

	<!-- Icons for specific dimensions for different devices -->
	<icon src="res/icons/72.png" gap:role="default" />
	<icon src="res/icons/36.png" width="36" height="36"/>
	<icon src="res/icons/48.png" width="48" height="48"/>
	<icon src="res/icons/57.png" width="57" height="57"/>
	<icon src="res/icons/72.png" width="72" height="72"/>
	<icon src="res/icons/114.png" width="114" height="114"/>
	
	<!-- Splash screens for specific dimensions for different devices -->
	<gap:splash src="res/splashes/splash.png"/>
	<gap:splash src="res/splashes/mdpi.png" width="480" height="800"/>
	<gap:splash src="res/splashes/retina.png" width="640" height="960"/>

  <preference name="permissions"      value="none"/>
  <preference name="phonegap-version" value="2.9.0" />
  <preference name="orientation"      value="portrait" />
  <preference name="target-device"    value="universal" />
  <preference name="fullscreen"       value="false" />

  <preference name="splash-screen-duration" value="5000" />
</widget>
